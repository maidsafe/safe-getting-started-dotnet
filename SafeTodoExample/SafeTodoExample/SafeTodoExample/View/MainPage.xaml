<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeTodoExample.View.MainPage"
             Title="SAFE Todo" 
             Padding="20">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding BuildMode}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label HorizontalTextAlignment="Center" Text="{Binding WelcomeText}" />
            <Button Text="Authenticate" Command="{Binding ConnectCommand}" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>